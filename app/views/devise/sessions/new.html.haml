.row-fluid
  .span4 &nbsp;
  #sign-in.span4
    .well
      .h3 Sign in
      = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .fields
          = f.input :email
          = f.input :password
        = f.button :submit, "Sign in", class: "btn btn-large pull-right"